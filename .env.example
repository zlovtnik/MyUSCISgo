# MyUSCISgo Environment Configuration
# Copy this file to .env and fill in your values

# USCIS API Configuration
USCIS_CLIENT_ID=your-uscis-client-id-here
USCIS_CLIENT_SECRET=your-uscis-client-secret-here

# USCIS API Endpoints
USCIS_DEV_URL=https://api-int.uscis.gov
USCIS_STAGING_URL=https://api-staging.uscis.gov
USCIS_PROD_URL=https://api.uscis.gov

# HTTP Client Configuration
HTTP_TIMEOUT=30s
HTTP_MAX_IDLE_CONNS=10
HTTP_IDLE_TIMEOUT=30s

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1s
RETRY_MAX_DELAY=30s

# Application Configuration
NODE_ENV=development
GO_ENV=development

# Docker Configuration
# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_REPO=zlovtnik/myuscisgo
# Optional:
DOCKER_IMAGE=${DOCKER_REGISTRY}/${DOCKER_REPO}
DOCKER_TAG=latest
# Development Configuration
VITE_API_URL=http://localhost:8080

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Database Configuration (if needed)
# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase

# Monitoring Configuration
# SENTRY_DSN=your-sentry-dsn-here
# PROMETHEUS_PORT=9090

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
