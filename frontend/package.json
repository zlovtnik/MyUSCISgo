{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config src/test/test-runner.config.ts src/**/*.test.{ts,tsx} --exclude src/test/integration.*.test.ts --exclude src/test/performance.test.ts --exclude src/test/accessibility.*.test.tsx",
    "test:integration": "vitest run --config src/test/test-runner.config.ts src/test/integration.*.test.ts",
    "test:performance": "vitest run --config src/test/test-runner.config.ts src/test/performance.test.ts --reporter=verbose",
    "test:accessibility": "vitest run --config src/test/test-runner.config.ts src/test/accessibility.*.test.tsx",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:accessibility",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --headed --timeout=60000",
    "test:e2e:workflows": "playwright test tests/e2e/workflows.spec.ts",
    "test:e2e:visual": "playwright test tests/e2e/visual.spec.ts",
    "test:comprehensive": "npm run test:all && npm run test:e2e",
    "test:watch": "vitest --watch",
    "test:watch:unit": "vitest --watch src/**/*.test.{ts,tsx} --exclude src/test/integration.*.test.ts --exclude src/test/performance.test.ts --exclude src/test/accessibility.*.test.tsx",
    "test:ci": "npm run test:run && npm run test:e2e"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-toastify": "^11.0.5",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react-syntax-highlighter": "^5.8.0",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4"
  }
}
